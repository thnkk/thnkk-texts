---
layout: layouts/base.njk
---
<article class="poem">
  <header class="poem-header">
    <h1 class="poem-title">{{ title }}</h1>
    {% set poemDate = page.date %}
    {% if poemDate %}
      <div class="poem-meta">{{ poemDate | readableDate }}</div>
    {% endif %}
  </header>

  <div class="poem-body">
    {{ content | safe }}
  </div>
</article>
