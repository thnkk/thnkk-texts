<!doctype html>
{% set url = page.url or "/" %}
{% set inTR = url.startsWith("/tr/") %}

{% if inTR %}
  {% set lang = "tr" %}
  {% set home_href = "/tr/" %}
  {% set texts_href = "/tr/texts/" %}
  {% set about_href = "/tr/hakkinda/" %}

  {% set nav_texts = "yazılar" %}
  {% set nav_sounds = "sesler" %}
  {% set nav_about = "hakkında" %}
  {% set nav_contact = "ne diyorsun?" %}
  {% set nav_lang = "en" %}

  {% set footer_thanks = "teşekkürler!" %}
{% else %}
  {% set lang = "en" %}
  {% set home_href = "/" %}
  {% set texts_href = "/texts/" %}
  {% set about_href = "/about/" %}

  {% set nav_texts = "texts" %}
  {% set nav_sounds = "sounds" %}
  {% set nav_about = "about" %}
  {% set nav_contact = "what do you say?" %}
  {% set nav_lang = "tr" %}

  {% set footer_thanks = "thank you!" %}
{% endif %}

{# language switch #}
{% if inTR %}

  {# tr -> en (default) #}
  {% set switchUrl = "/" %}

  {% if url == "/tr/" %}
    {% set switchUrl = "/" %}
  {% elif url == "/tr/texts/" %}
    {% set switchUrl = "/texts/" %}
  {% elif url == "/tr/hakkinda/" %}
    {% set switchUrl = "/about/" %}

  {# TR plastics book + chapters (+ any deeper path) -> EN equivalents #}
  {% elif url.startsWith("/tr/texts/etimdeki-plastikler/mikroplastikler/") %}
    {% set switchUrl = "/texts/plastics-in-my-flesh/microplastics/" %}
  {% elif url.startsWith("/tr/texts/etimdeki-plastikler/makroplastikler/") %}
    {% set switchUrl = "/texts/plastics-in-my-flesh/macroplastics/" %}
  {% elif url.startsWith("/tr/texts/etimdeki-plastikler/") %}
    {% set switchUrl = "/texts/plastics-in-my-flesh/" %}

  {# any other TR texts subpage -> EN texts #}
  {% elif url.startsWith("/tr/texts/") %}
    {% set switchUrl = "/texts/" %}
  {% endif %}

{% else %}

  {# en -> tr (default) #}
  {% set switchUrl = "/tr/" %}

  {% if url == "/" %}
    {% set switchUrl = "/tr/" %}
  {% elif url == "/texts/" %}
    {% set switchUrl = "/tr/texts/" %}
  {% elif url == "/about/" %}
    {% set switchUrl = "/tr/hakkinda/" %}

  {# EN plastics book + chapters + poem pages -> TR chapter index pages #}
  {% elif url.startsWith("/texts/plastics-in-my-flesh/microplastics/") %}
    {% set switchUrl = "/tr/texts/etimdeki-plastikler/mikroplastikler/" %}
  {% elif url.startsWith("/texts/plastics-in-my-flesh/macroplastics/") %}
    {% set switchUrl = "/tr/texts/etimdeki-plastikler/makroplastikler/" %}
  {% elif url.startsWith("/texts/plastics-in-my-flesh/") %}
    {% set switchUrl = "/tr/texts/etimdeki-plastikler/" %}

  {# any other EN texts subpage -> TR texts #}
  {% elif url.startsWith("/texts/") %}
    {% set switchUrl = "/tr/texts/" %}
  {% endif %}

{% endif %}


<html lang="{{ lang }}">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{ title or site.title }}</title>
    <meta name="description" content="{{ description or site.tagline }}" />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <header class="site-header">
      <a class="site-title" href="{{ home_href }}">{{ site.title }}</a>
      <nav class="site-nav">
        <a href="{{ texts_href }}">{{ nav_texts }}</a>
        <a href="{{ site.bandcamp_url }}" target="_blank" rel="noopener">{{ nav_sounds }}</a>
        <a href="{{ about_href }}">{{ nav_about }}</a>
        <a href="mailto:{{ site.email }}">{{ nav_contact }}</a>
        <a href="{{ switchUrl }}">{{ nav_lang }}</a>
      </nav>
    </header>

    <main class="site-main">
      {{ content | safe }}
    </main>

    <footer class="site-footer">
  <span>{{ footer_thanks }}</span>
  <div class="site-copyright">© thn|KK</div>
</footer>
  </body>
</html>
