<!doctype html>
{# ui language is determined by url prefix: /tr/... #}
{% set inTR = page.url and page.url.startsWith("/tr/") %}
{% set ui = inTR ? "tr" : "en" %}
{% set t = i18n[ui] %}
{% set prefix = inTR ? "/tr" : "" %}

{# poem pages live only under /texts/... (no /tr version), so toggle goes to the list #}
{% set isPoemPage = page.url and page.url.startsWith("/texts/") and page.url != "/texts/" %}

{% if inTR %}
  {# switching to english #}
  {% if page.url == "/tr/" %}
    {% set switchUrl = "/" %}
  {% elseif page.url == "/tr/start-here/" %}
    {% set switchUrl = "/start-here/" %}
  {% elseif page.url == "/tr/texts/" %}
    {% set switchUrl = "/texts/" %}
  {% elseif page.url == "/tr/hakkinda/" %}
    {% set switchUrl = "/about/" %}
  {% else %}
    {% set switchUrl = "/" %}
  {% endif %}
{% else %}
  {# switching to turkish #}
  {% if isPoemPage %}
    {% set switchUrl = "/tr/texts/" %}
  {% else %}
    {% set switchUrl = "/tr" + page.url %}
  {% endif %}
{% endif %}

<html lang="{{ lang or ui }}">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{ title or site.title }}</title>
    <meta name="description" content="{{ description or site.tagline }}" />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <header class="site-header">
      <a class="site-title" href="{{ prefix }}/">{{ site.title }}</a>
      <nav class="site-nav">
        <a href="{{ prefix }}/texts/">{{ t.nav_texts }}</a>
        <a href="{{ prefix }}/start-here/">{{ t.nav_start }}</a>
        <a href="{{ prefix }}{% if inTR %}/hakkinda/{% else %}/about/{% endif %}">{{ t.nav_about }}</a>
        <a href="{{ site.bandcamp_url }}" target="_blank" rel="noopener">{{ t.nav_bandcamp }}</a>
        <a href="{{ switchUrl }}">{{ t.nav_lang }}</a>
      </nav>
    </header>

    <main class="site-main">
      {{ content | safe }}
    </main>

    <footer class="site-footer">
      <span>© {{ site.author }}</span>
      <span class="sep">·</span>
      <a href="{{ site.bandcamp_url }}" target="_blank" rel="noopener">{{ t.footer_music }}</a>
    </footer>
  </body>
</html>
